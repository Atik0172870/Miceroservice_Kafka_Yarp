{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "confirmBillRoute": {
        "ClusterId": "billCluster",
        "Match": { "Path": "/bill-gateway/confirm-bill" },
        "Transforms": [
          { "PathSet": "/api/Bill/confirm-bill" }
        ]
      },
      "sendBillRoute": {
        "ClusterId": "billCluster",
        "Match": { "Path": "/bill-gateway/send-bill" },
        "Transforms": [
          { "PathSet": "/api/Bill/send-bill" }
        ]
      },
      "createOrderRoute": {
        "ClusterId": "orderCluster",
        "Match": { "Path": "/order-gateway/create-order" },
        "Transforms": [
          { "PathSet": "/api/Orders/create-order" }
        ]
      },
      "createBillOrderRoute": {
        "ClusterId": "orderCluster",
        "Match": { "Path": "/order-gateway/create-bill" },
        "Transforms": [
          { "PathSet": "/api/Orders/create-bill" }
        ]
      }
    },
    "Clusters": {
      "billCluster": {
        "Destinations": {
          "destination1": { "Address": "https://localhost:7274/" }
        }
      },
      "orderCluster": {
        "Destinations": {
          "destination1": { "Address": "https://localhost:7286/" }
        }
      }
    }
  }
}
